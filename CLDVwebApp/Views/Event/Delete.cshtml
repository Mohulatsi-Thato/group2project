@model CLDVwebApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<div>
    <h4>Are you sure you want to delete this event?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Event Name</dt>
        <dd class="col-sm-10">@Model.EventName</dd>

        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
