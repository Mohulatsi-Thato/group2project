@model CLDVwebApp.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<h3>Are you sure you want to delete this venue?</h3>

<div>
    <h4>@Model.VenueName</h4>
    <p>@Model.Location</p>
    <p>@Model.Capacity</p>
    <p><img src="@Model.ImageUrl" alt="@Model.VenueName" width="100" height="100" /></p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Venue")">Cancel</a>
</form>
