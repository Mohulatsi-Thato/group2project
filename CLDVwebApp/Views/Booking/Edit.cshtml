@model CLDVwebApp.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
    var venues = ViewData["Venues"] as List<CLDVwebApp.Models.Venue>;
    var eventsList = ViewData["Events"] as List<CLDVwebApp.Models.Event>;
}

<h2>Edit Booking</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="BookingId" />

    <div class="form-group">
        <label asp-for="EventId" class="control-label">Event</label>
        <select asp-for="EventId" class="form-control" asp-items="@(new SelectList(eventsList, "EventID", "EventName", Model.EventId))">
            <option value="">-- Select Event --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="VenueId" class="control-label">Venue</label>
        <select asp-for="VenueId" class="form-control" asp-items="@(new SelectList(venues, "VenueID", "VenueName", Model.VenueId))">
            <option value="">-- Select Venue --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="control-label">Booking Date</label>
        <input asp-for="EventDate" class="form-control" type="datetime-local" value="@Model.EventDate.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
